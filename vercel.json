{
  "version": 2,
  "rewrites": [
    {
      "source": "/locale/language.js",
      "has": [
        {
          "type": "cookie",
          "key": "dm-lang",
          "value": "ar"
        }
      ],
      "destination": "/locale/dm-ar.js"
    },
    {
      "source": "/locale/language.js",
      "destination": "/locale/dm-en.js"
    },
    {
      "source": "/rtlstyles.css",
      "has": [
        {
          "type": "cookie",
          "key": "dm-lang",
          "value": "ar"
        }
      ],
      "destination": "/styles.rtl.css"
    },
    {
      "source": "/rtlstyles.css",
      "destination": ""
    },
    {
      "source": "/([^.]+)",
      "destination": "/"
    }
  ]
}
